{% extends "sabbath.twig" %}
{% block base %}

<!DOCTYPE html>
<html class="no-js">
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />

</head>
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>
<div id="flex_wrap">

    <div id="head" role="banner">
        <div class="container">
          <div class="row">
            <div class="col-3 col-6-sm">
            <a href="{{ "index"|link }}">
              <div id="title">
                <img src="{{ theme_url }}/img/logo.svg" alt="">
              </div>
            </a>
          </div>
          <div class="col-9 col-6-sm right">
            <div id="nav" role="navigation" tabindex="-1">
                <ul>
                  {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                      {% if page.id not in [ "privacyPolicy", "index" ] %}
                      <li>
                          <a href="{{ page.url }}" {% if page.id == current_page.id %} class="active"{% endif %}>{{ page.title }}</a>
                      </li>
                      {% endif %}
                  {% endfor %}
                </ul>
            </div>
            <a href="javascript:void(0);" id="mobNavIcon" onclick="myFunction()">
                &#43; Menu
            </a>
          </div>
        </div>
      </div>
    </div>

    <div id="main" role="main">
      <div class="container">
        <div class="row">

          <div id="mobNav" role="navigation" tabindex="-1">
              <ul>
                {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                    {% if page.id not in [ "privacyPolicy", "index" ] %}
                    <li>
                        <a href="{{ page.url }}" {% if page.id == current_page.id %} class="active"{% endif %}>{{ page.title }}</a>
                    </li>
                    {% endif %}
                {% endfor %}
              </ul>
          </div>

        </div>


         {% block main %}
         {% endblock %}


       </div>
    </div>

</div>

    <div id="footer">
        <div class="container">
          <div class="row">

              {{ "_footer"|content }}
              <div class="col-3">
                {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                    {% if page.id not in [ "privacyPolicy", "index" ] %}
                    <li>
                        <a href="{{ page.url }}">{{ page.title }}</a>
                    </li>
                    {% endif %}
                {% endfor %}
              </div>
            </div>
        </div>
    </div>

    <script>if(!sessionStorage.getItem("_swa")&&document.referrer.indexOf(location.protocol+"//"+location.host)!== 0){fetch("https://counter.dev/track?"+new URLSearchParams({referrer:document.referrer,screen:screen.width+"x"+screen.height,user:"liturgylaboratory",utcoffset:"1"}))};sessionStorage.setItem("_swa","1");</script>
    <script src="{{ theme_url }}/js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/pico.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/script.js" type="text/javascript"></script>


</body>
</html>

{% endblock %}
